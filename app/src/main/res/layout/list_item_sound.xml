<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound name"
            android:id="@+id/sound_name" android:layout_weight="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/button_play" android:layout_weight="0"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stop"
            android:id="@+id/button_stop" android:layout_weight="0"/>
</LinearLayout>